{%- assign fields = section.settings -%}
<h1>hello</h1>
{%- include 'text-focus',
  mod_title: fields['title'],
  mod_text: fields['text'],
  mod_icons: section.blocks -%}

{%- assign fields = nil -%}

{% schema %}
  {
    "name": "Home Statement",
    "max_blocks": 4,
    "settings": [{
      "type": "header",
      "content": "Content"
    }, {
      "type": "text",
      "id": "title",
      "label": "Title"
    }, {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    }],
    "blocks": [{
      "type": "callout",
      "name": "Callout",
      "settings": [{
        "type": "text",
        "id": "text",
        "label": "Text"
      }, {
        "type": "text",
        "id": "icon",
        "label": "SVG File Name",
        "info": "SVG should be named \"home-statement-icon-ICON_NAME.svg\" and uploaded in [Files](https://hurom.com/admin/settings/files)",
        "placeholder": "home-statement-icon-juicer.svg"
      }]
    }]
  }
{% endschema %}
