<section class="section-bottom product-design">
    <div class="product-design__container container">
        <div class="product-design__title">
            <h2 class="product-design__head">{{ title }}</h2>
        </div>
        <div class="product-design__holder">
            <div class="product-design__block">
                <i class="product-design__icon" style="background: url({{ block_1_icon }}) no-repeat scroll center / contain transparent;"></i>
                <p class="product-design__sub">{{ block_1_sub }}</p>
                <p class="product-design__label">{{ block_1_label }}</p>
            </div>
            <div class="product-design__block">
                <i class="product-design__icon" style="background: url({{ block_2_icon }}) no-repeat scroll center / contain transparent;"></i>
                <p class="product-design__sub">{{ block_2_sub }}</p>
                <p class="product-design__label">{{ block_2_label }}</p>
            </div>

            {% unless product.metafields.accentuate.hide_design_block_3 %}
                <div class="product-design__block">
                    <i class="product-design__icon" style="background: url({{ block_3_icon }}) no-repeat scroll center / contain transparent;"></i>
                    <p class="product-design__sub">{{ block_3_sub }}</p>
                    <p class="product-design__label">{{ block_3_label }}</p>
                </div>
            {% endunless %}

            {% unless product.metafields.accentuate.hide_design_block_4 %}
