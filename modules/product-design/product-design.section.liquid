                    <i class="product-design__icon" style="background: url({{ block_4_icon }}) no-repeat scroll center / contain transparent;"></i>
                    <p class="product-design__sub">{{ block_4_sub }}</p>
                    <p class="product-design__label">{{ block_4_label }}</p>
                </div>
            {% endunless %}
        </div>
    </div>
</section>

