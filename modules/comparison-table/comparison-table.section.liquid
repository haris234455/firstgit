<div class="cd-products-comparison-table" data-module="comparison-table">
  <div class="actions">
    <a href="#0" class="reset">Reset</a>
    <a href="#0" class="btn filter" title="Compare">Compare</a>
  </div>

  <div class="cd-products-table">
    <div class="features">
      <div class="top-info">Models</div>
      <ul class="cd-features-list">
        <li>
          <span>Series <i class="cd-product-info" data-dialog="compare-series" data-module="modal" onClick="ga('send', 'event', 'Compare Juicers Info Modal Clicks', 'Click: Series', 'Referrer: {{ page_title }}')"></i></span>
        </li>
        <li class="cd-feature--tall">
          <span>Technology</span>
        </li>
        <li>
          <span>Price</span>
        </li>
        <li>
          <span>Reviews</span>
        </li>
        <li>
          <span>Colors Available</span>
        </li>
        <li>
          <span>Capacity</span>
        </li>
        <li>
          <span>Motor & Speed</span>
        </li>
        <li>
          <span>Feed Chute</span>
        </li>
        <li>
          <span>Control Lever <i class="cd-product-info" data-dialog="compare-control-lever" data-module="modal" onClick="ga('send', 'event', 'Compare Juicers Info Modal Clicks', 'Click: Control Lever', 'Referrer: {{ page_title }}')"></i></span>
        </li>
        <li>
          <span>Fine Strainer <i class="cd-product-info" data-dialog="compare-fine-strainer" data-module="modal" onClick="ga('send', 'event', 'Compare Juicers Info Modal Clicks', 'Click: Fine Strainer', 'Referrer: {{ page_title }}')"></i></span>
        </li>
        <li>
          <span>Coarse Strainer <i class="cd-product-info" data-dialog="compare-coarse-strainer" data-module="modal" onClick="ga('send', 'event', 'Compare Juicers Info Modal Clicks', 'Click: Coarse Strainer', 'Referrer: {{ page_title }}')"></i> </span>
        </li>
        <li class="cd-feature--tall">
          <span>Juicing Versatility</span>
        </li>
        <li class="cd-feature--tall">
          <span>Accessories</span>
        </li>
        <li>
          <span>Stainless Steel</span>
        </li>
        <li>
          <span>Self Feeding Hopper</span>
        </li>
        <li></li>
      </ul>
    </div> <!-- .features -->

    <div class="cd-products-wrapper">
      <ul class="cd-products-columns">
        {% for block in section.blocks %}
          {% assign handle = block.settings.product %}
          {% assign product = all_products[handle] %}
          {% assign series = block.settings.series %}
          {% assign technology = block.settings.technology %}
          {% assign new_product = block.settings.new_product %}
          {% assign capacity = block.settings.capacity %}
          {% assign motor_speed = block.settings.motor_speed %}
          {% assign feed_chute = block.settings.feed_chute %}
          {% assign control_lever = block.settings.control_lever %}
          {% assign fine_strainer = block.settings.fine_strainer %}
          {% assign coarse_strainer = block.settings.coarse_strainer %}
          {% assign juicing_versatility = block.settings.juicing_versatility %}
          {% assign accessories = block.settings.accessories %}
          {% assign stainless_steel = block.settings.stainless_steel %}
          {% assign self_feeding_hopper = block.settings.self_feeding_hopper %}

          <li class="product">
            <div class="top-info">
              <div class="check"></div>
              <img src="{% if product.featured_image %}{{ product.featured_image | img_url: 'compact' }}{% else %}{{ 'fallback-product-item.svg' | asset_url }}{% endif %}" alt="{{ product.title }}">
              <h3>{{ product.title | remove: ' Slow Juicer' }}<br>Slow Juicer</h3>
              <a class="product__top-btn btn" href="{{ product.url }}" title="View Details">View Details</a>
            </div> <!-- .top-info -->

            <ul class="cd-features-list">
              <li>
                <span>
                  {{ series }}
                </span>
              </li>
              <li class="cd-feature--tall">
                <span>
                  {{ technology | newline_to_br }}
                </span>
              </li>
              <li>
                <span>
                  {{ product.price | money }}
                </span>
              </li>
              <li>
                <div>
                  {% if new_product %}
                    NEW
                  {% else %}
                    <div class="product-item__reviews">
                      <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
                    </div>
                  {% endif %}
                </div>
              </li>
              <li>
                <span>
                  {% for variant in product.variants %}
                    {{ variant.title }}{% unless forloop.last == true %}, {% endunless %}
                  {% endfor %}
                </span>
              </li>
              <li>
                <span>
                  {{ capacity }}
                </span>
              </li>
              <li>
                <span>
                  {{ motor_speed }}
                </span>
              </li>
              <li>
                <span>
                  {{ feed_chute }}
                </span>
              </li>
              <li>
                <span>
                  {% if control_lever %}
                    <i class="cd-icon ico-check"></i>
                  {% endif %}
                </span>
              </li>
              <li>
                <span>
                  {% if fine_strainer %}
                    <i class="cd-icon ico-check"></i>
                  {% endif %}
                </span>
              </li>
              <li>
                <span>
                  {% if coarse_strainer %}
                    <i class="cd-icon ico-check"></i>
                  {% endif %}
                </span>
              </li>
              <li class="cd-feature--tall">
                <span>
                  {{ juicing_versatility | newline_to_br }}
                </span>
              </li>
              <li class="cd-feature--tall">
                <span>
                  {{ accessories | newline_to_br }}
                </span>
              </li>
              <li>
                <span>
                  {% if stainless_steel %}
                    <i class="cd-icon ico-check"></i>
                  {% endif %}
                </span>
              </li>
              <li>
                <span>
                  {% if self_feeding_hopper %}
                    <i class="cd-icon ico-check"></i>
                  {% endif %}
                </span>
              </li>
              <li><a class="btn" href="{{ product.url }}" title="View Details">View Details</a></li>
            </ul>
          </li>

          {% assign handle = false %}
          {% assign product = false %}
          {% assign series = false %}
          {% assign technology = false %}
          {% assign new_product = false %}
          {% assign capacity = false %}
          {% assign motor_speed = false %}
          {% assign feed_chute = false %}
          {% assign control_lever = false %}
          {% assign fine_strainer = false %}
          {% assign coarse_strainer = false %}
          {% assign juicing_versatility = false %}
          {% assign accessories = false %}
          {% assign self_feeding_hopper = false %}
        {% endfor %}
      </ul>
    </div>
    <ul class="cd-table-navigation">
      <li><a href="#0" class="prev inactive"></a></li>
      <li><a href="#0" class="next"></a></li>
    </ul>
  </div>
</div>

