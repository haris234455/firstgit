{% schema %}
  {
    "name": "Comparison Table",
    "blocks": [ {
      "type": "product",
      "name": "Product",
      "settings": [ {
        "type": "product",
        "id": "product",
        "label": "Product"
      }, {
        "type": "text",
        "id": "series",
        "label": "Series"
      }, {
        "type": "textarea",
        "id": "technology",
        "label": "Technology"
      }, {
        "type": "checkbox",
        "id": "new_product",
        "label": "New Product",
        "default": false
      }, {
        "type": "text",
        "id": "capacity",
        "label": "Capacity"
      }, {
        "type": "text",
        "id": "motor_speed",
        "label": "Motor & Speed"
      }, {
        "type": "text",
        "id": "feed_chute",
        "label": "Feed Chute"
      }, {
        "type": "checkbox",
        "id": "control_lever",
        "label": "Control Lever",
        "default": false
      }, {
        "type": "checkbox",
        "id": "fine_strainer",
        "label": "Fine Strainer",
        "default": false
      }, {
        "type": "checkbox",
        "id": "coarse_strainer",
        "label": "Coarse Strainer",
        "default": false
      }, {
        "type": "textarea",
        "id": "juicing_versatility",
        "label": "Juicing Versatility"
      }, {
        "type": "textarea",
        "id": "accessories",
        "label": "Accessories"
      }, {
        "type": "checkbox",
        "id": "stainless_steel",
        "label": "Stainless Steel",
        "default": false
      }, {
        "type": "checkbox",
        "id": "self_feeding_hopper",
        "label": "Self Feeding Hopper",
        "default": false
      } ]
    } ]
  }
{% endschema %}
