{%- assign fields = section.settings -%}

{%- include 'instagram-feed',
  mod_label: fields['text'],
  mod_script: fields['script'] -%}

{%- assign fields = nil -%}

{% schema %}
  {
    "name": "Home Instagram Feed",
    "settings": [{
      "type": "header",
      "content": "Content"
    }, {
      "type": "text",
      "id": "text",
      "label": "Text"
    }, {
      "type": "textarea",
      "id": "script",
      "label": "Showcase Gallery Script"
    }]
  }
{% endschema %}
