<section class="product-versatility">
    <div class="product-versatility__container container">
        <div class="product-versatility__title">
            <h2 class="product-versatility__head">{{ title }}</h2>
            <h2 class="product-versatility__head--mobile">{{ mobile_title }}</h2>
            <p class="product-versatility__lead">{{ body }}</p>
        </div>
        <div class="product-versatility__holder">
            <div class="product-versatility__block fx-4">
                <i class="product-versatility__food" style="background-image: url({{ block_1_icon }});"></i>
                <p class="product-versatility__sub">{{ block_1_label }}</p>
            </div>
            <div class="product-versatility__block fx-4">
                <i class="product-versatility__food" style="background-image: url({{ block_2_icon }});"></i>
                <p class="product-versatility__sub">{{ block_2_label }}</p>
            </div>
            <div class="product-versatility__block fx-4">
                <i class="product-versatility__food" style="background-image: url({{ block_3_icon }});"></i>
                <p class="product-versatility__sub">{{ block_3_label }}</p>
            </div>
            <div class="product-versatility__block fx-4">
                <i class="product-versatility__food" style="background-image: url({{ block_4_icon }});"></i>
                <p class="product-versatility__sub">{{ block_4_label }}</p>
            </div>
        </div>
    </div>
</section>

