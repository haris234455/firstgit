<!-- /sections/product-versatility.liquid -->
{% assign metafields = product.metafields.accentuate %}

{% capture title %}
  {% if metafields.versatility_title %}
    {{- metafields.versatility_title -}}
  {% else %}
    {{- section.settings.title -}}
  {% endif %}
{% endcapture %}
{% capture mobile_title %}
  {% if metafields.versatility_mobile_title %}
    {{- metafields.versatility_mobile_title -}}
  {% else %}
    {{- section.settings.mobile_title -}}
  {% endif %}
{% endcapture %}
{% capture body %}
  {% if metafields.versatility_body %}
    {{- metafields.versatility_body -}}
  {% else %}
    {{- section.settings.body -}}
  {% endif %}
{% endcapture %}
{% capture block_1_icon %}
  {% if metafields.versatility_block_1_icon_cust %}
    {{- metafields.versatility_block_1_icon_cust -}}
  {% elsif metafields.versatility_block_1_icon %}
    {{- metafields.versatility_block_1_icon | append: '.svg' | asset_url -}}
  {% else %}
    {{- section.settings.block_1_icon | append: '.svg' | asset_url -}}
  {% endif %}
{% endcapture %}
{% capture block_1_label %}
  {% if metafields.versatility_block_1_label %}
    {{- metafields.versatility_block_1_label -}}
  {% elsif section.settings.block_1_label != blank %}
    {{- section.settings.block_1_label -}}
  {% elsif metafields.versatility_block_1_icon %}
    {{- metafields.versatility_block_1_icon -}}
  {% else %}
    {{- section.settings.block_1_icon -}}
  {% endif %}
{% endcapture %}
{% capture block_2_icon %}
