{%- assign mod_name = mod_name | default: false -%}
{%- assign mod_label = mod_label | default: false -%}
{%- assign mod_label_style = mod_label_style | default: false -%}
{%- assign mod_type = mod_type | default: 'text' -%}
{%- assign mod_value = mod_value | default: blank -%}
{%- assign mod_autocorrect = mod_autocorrect | default: false -%}
{%- assign mod_autocapitalize = mod_autocapitalize | default: false -%}
{%- assign mod_placeholder = mod_placeholder | default: blank -%}
{%- assign mod_class = mod_class | default: blank -%}
{%- assign mod_error = mod_error | default: 'Required Field' -%}
{%- assign mod_response = mod_response | default: false -%}
{%- assign mod_style = mod_style | default: 'default' -%}
{%- assign mod_required = mod_required | default: false -%}
{%- assign mod_dynamic_value = mod_dynamic_value | default: false -%}
{%- assign mod_dynamic_validate = mod_dynamic_validate | default: false -%}
{%- assign mod_change = mod_change | default: false -%}

{%- capture mod_css -%}
  text-input text-input--{{mod_style}} {{mod_class}}
{%- endcapture -%}

<input
  class="{{- mod_css | strip -}}"
  {% if mod_change %}@change="{{mod_change}}"{% endif %}
  {% if mod_label %}label="{{mod_label}}"{% endif %}
  {% if mod_label_style %}activeLabelStyle="{{mod_label_style}}"{% endif %}
  modifier="{{mod_style}}"
  type="{{mod_type}}"
  name="{{mod_name}}"
  placeholder="{{mod_placeholder}}"
  autocorrect="{{mod_autocorrect}}"
  autocapitalize="{{mod_autocapitalize}}"
  {% if mod_required %}required="true"{% endif %}
  {% if mod_dynamic_validate %}:validate="{{mod_dynamic_validate}}"{% endif %}
  {% if mod_dynamic_value %}:get-value="{{mod_dynamic_value}}"{% endif %}
  error="{{mod_error}}"
  :response="{{mod_response}}" />

{%- assign mod_label = nil -%}
{%- assign mod_name = nil -%}
{%- assign mod_type = nil -%}
{%- assign mod_value = nil -%}
{%- assign mod_autocorrect = nil -%}
{%- assign mod_autocapitalize = nil -%}
{%- assign mod_placeholder = nil -%}
{%- assign mod_class = nil -%}
{%- assign mod_error = nil -%}
{%- assign mod_response = nil -%}
{%- assign mod_style = nil -%}
{%- assign mod_required = nil -%}
{%- assign mod_dynamic_value = nil -%}
{%- assign mod_dynamic_validate = nil -%}
{%- assign mod_change = nil -%}
