<!-- /templates/collection.liquid -->

<div class="collection page page--footer-cta">
    <div class="collection__container container-xl">
        <header class="page-title" data-view="fadein-down">
            {% if collection.handle == 'all' %}
                <h2 class="page-title__head">{{ 'products.general.all_products' | t }}</h2>
            {% else %}
                <h2 class="page-title__head">{{ collection.title }}</h2>
            {% endif %}
            {% if collection.description != blank %}
                <p class="page-title__lead">{{ collection.description | strip_html }}</p>
            {% endif %}
        </header>
    </div>
    {%- if collection.metafields.accentuate.enable_four_up -%}
        {%- section 'refurbished-four-up' -%}
    {%- endif -%}
    <div class="collection__container container-xl">
        <section class="page-content">
            {% include 'product-grid' %}
        </section>
    </div>
</div>
