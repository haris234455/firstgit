{%- assign mod_title = mod_title | default: blank -%}
{%- assign mod_handles = mod_handles | default: blank -%}
{%- assign mod_class = mod_class | default: blank -%}

{%- capture mod_css -%}
  product-four-up {{- mod_class -}}
{%- endcapture -%}

{%- assign mod_handles_list = mod_handles | split: ',' -%}

{%- if mod_handles != blank -%}
  <div class="{{- mod_css | strip -}}" data-module="product-four-up">
    <div class="product-four-up__container container-sp">
      {%- if mod_title != blank -%}
        <h2 class="hurom-h2 product-four-up__title">
          {{- mod_title -}}
        </h2>
      {%- endif -%}

      <div class="product-four-up__items clearfix">
        {%- for handle in mod_handles_list -%}
          {%- assign product = all_products[handle] -%}
          {%- include 'product-item' -%}
          {%- assign product = nil -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

{%- assign mod_title = nil -%}
{%- assign mod_handles = nil -%}
{%- assign mod_class = nil -%}
{%- assign mod_css = nil -%}
{%- assign mod_handles_list = nil -%}
