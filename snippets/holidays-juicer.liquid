<section class="hol-juicer section">
	<div class="container-l">
		<div class="hol-juicer__head mw-800">
			<h2 class="h3 hfancy hf-flip-68 mg-10 is-{{ color }}">Dazzle Your Friends &amp; Family With</h2>
			<h3 class="h1 mg-20">The Gift of Juice</h3>
		</div>
		<div class="hol-juicer__content">
			<h4 class="juicer-collection on-desktop h6">{{ group }}</h4>
			<div class="juicer-infos grid is-{{ color }}">
				<h4 class="juicer-collection on-mobile h6">{{ group }}</h4>
				<h5 class="juicer-name h4">{{ title }}</h5>
			</div>
			<div class="juicer-featured on-mobile br-bottom is-{{ color }}" style="background-image:url( {{ featured | asset_img_url: '800x', format: 'pjpg' }} );"></div>
			<p class="p1">{{ content }}</p>
			<form class="add-juicer" action="/cart/add" method="post" target="_blank">
				<div class="row clearfix r-center grid is-{{ color }}">
					<span class="add-juicer__price h4 is-{{ color }} br-right">{{ price }}</span>
					<div class="add-juicer__quantity p1 is-{{ color }}">
                      <select name="quantity">
                        {% for i in (1..3) %}
                        <option value="{{ i }}" {% if i == 1 %}selected="selected"{% endif %}>
                          {{ i }}
                        </option>
                        {% endfor %}
                      </select>
						<span class="add-juicer__arrow">
							{% include 'ico-holidays', icon: 'dropdown' %}
						</span>
					</div>
				</div>
                <input class="hidden" type="text" name="id" value="{{ id }}">
				<div class="row clearfix">
					<a class="add-juicer__btn-learn btn-2 is-{{ color }}" href="{{ url }}?variant={{ id }}" title="Learn More">Learn More</a>
					<input class="add-juicer__btn-buy btn-1 is-{{ color }}" type="submit" value="Add to Cart">
				</div>
			</form>
		</div>
		<div class="juicer-featured on-desktop js-lazy trans-right" data-src="{{ featured | asset_img_url: '1400x', format: 'pjpg' }}"></div>
	</div>
</section>

{% assign featured = false %}
{% assign id = 'false' %}
{% assign price = 'false' %}
{% assign group = 'false' %}
{% assign title = 'false' %}
{% assign content = 'false' %}
