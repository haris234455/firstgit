{%- if article and article.url contains '/blogs/recipes' -%}
  {%- assign fields = article.metafields.schema -%}
  {%- assign recipe_title = fields.name | default: article.title -%}
  {%- assign recipe_image_src = article.image.src | img_url: 'master' -%}
  {%- assign recipe_image = fields.image | default: recipe_image_src -%}
  {%- assign recipe_author = fields.author | default: article.author -%}
  {%- assign recipe_description = fields.description | default: article.excerpt -%}
  {%- if fields.recipe_ingredients.size > 0 -%}
    {%- capture recipe_ingredients -%}
      [
      {%- for recipe in fields.recipe_ingredients -%}
        {{ recipe | json }}{%- unless forloop.last -%},{%- endunless -%}
      {%- endfor -%}
      ]
    {%- endcapture -%}
  {%- endif -%}
  {%- assign recipe_instructions = fields.recipe_instructions | default: nil -%}
  {%- assign recipe_prep_time = fields.prep_time | default: nil -%}
  {%- assign recipe_cook_time = fields.cook_time | default: nil -%}
  {%- assign recipe_total_time = fields.total_time | default: nil -%}
  {%- assign recipe_yield = fields.recipe_yield | default: nil -%}

  <script type="application/ld+json">
    {
      "@context": "http://schema.org/",
      "@type": "Recipe",
      "name": {{ recipe_title | json }},
      "image": {{ recipe_image | json }},
      "author": {{ recipe_author | json }}
      {%- if recipe_description != blank -%}
      ,"description": {{ recipe_description | json }}
      {%- endif -%}
      {%- if recipe_ingredients != blank -%}
      ,"recipeIngredient": {{ recipe_ingredients }}
      {%- endif -%}
      {%- if recipe_instructions != blank -%}
      ,"recipeInstructions": {{ recipe_instructions | json }}
      {%- endif -%}
      {%- if recipe_prep_time != blank -%}
      ,"prepTime": {{ recipe_prep_time | json }}
      {%- endif -%}
      {%- if recipe_cook_time != blank -%}
      ,"cookTime": {{ recipe_cook_time | json }}
      {%- endif -%}
      {%- if recipe_total_time != blank -%}
      ,"totalTime": {{ recipe_total_time | json }}
      {%- endif -%}
      {%- if recipe_yield != blank -%}
      ,"recipeYield": {{ recipe_yield | json }}
      {%- endif -%}
    }
  </script>

  {%- assign fields = nil -%}
  {%- assign recipe_title = nil -%}
  {%- assign recipe_image_src = nil -%}
  {%- assign recipe_image = nil -%}
  {%- assign recipe_author = nil -%}
  {%- assign recipe_description = nil -%}
  {%- assign recipe_ingredients = nil -%}
  {%- assign recipe_instructions = nil -%}
  {%- assign recipe_prep_time = nil -%}
  {%- assign recipe_cook_time = nil -%}
  {%- assign recipe_total_time = nil -%}
  {%- assign recipe_yield = nil -%}
{%- endif -%}
