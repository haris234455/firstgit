        <div class="footer-country hide">
          <ul class="footer-country__list mobile-nav__list mobile-nav__list--country" data-dropdown>
            {%- for link in linklists.country-menu.links -%}
                <li class="footer-country__item">
                    <a class="footer-country__link{% if forloop.first %} footer-country__link--first{% endif %}{% if country contains link.title | handle %} footer-country__link--active{% endif %} flag store-{{ link.title | handleize }}"
                      href="{%- if country contains link.title | handle -%}#{%- else -%}{{- link.url -}}{%- unless country contains link.title -%}?redirect=false{%- endunless -%}{%- endif -%}"
                      onClick="ga('send', 'event', 'Header Navigation', 'Click: {{ link.url }}', 'Referrer: {{ page_title }}')">
                      {%- case link.title -%}
                          {%- when 'US' -%}
                              {{- 'layout.country_selector.united_states' | t -}}
                          {%- when 'CA' -%}
                              {{- 'layout.country_selector.canada' | t -}}
                      {%- endcase -%}
                    </a>
                </li>
            {%- endfor -%}
            <i class="footer-country__caret-down"></i>
          </ul>
        </div>

        <div class="footer-details">
            <div class="footer-info">
                <ul class="footer-info__list">
                    {% for link in linklists.footer.links %}
                        <li class="footer-info__item">
                            <a class="footer-info__link" href="{{ link.url }}" onClick="ga('send', 'event', 'Footer Navigation', 'Click: {{ link.url }}', 'Referrer: {{ page_title }}')">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="footer-service">
                <p class="footer-service__head">{{ settings.footer_column_2_header }}</p>
                <span class="footer-service__phone">{{ settings.footer_column_2_text }}</span>
            </div>
        </div>

        {% if settings.footer_newsletter_enable %}
            <div class="footer-newsletter">
                <p class="footer-newsletter__head">{{ settings.footer_column_signup_header }}</p>
                <div class="footer-newsletter__holder">
                    <form id="mc-embedded-subscribe-form" class="footer-newsletter__form" action="//hurom.us10.list-manage.com/subscribe/post-json?u=e591cf0ac90ff25a1c5fcc40f&amp;id=419d71ffe2&amp;c=?" method="post" method="post" name="mc-embedded-subscribe-form" novalidate>
                        <label class="sr-only" for="mce-email-footer">{{ 'general.newsletter_form.newsletter_email' | t }}</label>
                        <input id="mce-email-footer" class="footer-newsletter__field field" type="email" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
                        {% case settings.country %}
                          {% when 'US' %}
                            <input type="checkbox" value="8" name="group[8861][8]" aria-hidden="true" tabindex="-1" id="mce-group[8861]-8861-0" style="display:none;" checked>
                          {% when 'CA' %}
                            <input type="checkbox" value="536870912" name="group[8861][536870912]" aria-hidden="true" tabindex="-1" id="mce-group[8861]-8861-26" style="display:none;" checked>
                        {% endcase %}

                        <button id="mc-embedded-subscribe" aria-label="Submit" class="footer-newsletter__btn" type="submit" name="subscribe"></button>
                        <span class="error hidden">{{ 'general.newsletter_form.error' | t }}</span>
                        <!-- real people should not fill this in and expect good things -->
                        <div class="mce_hidden sr-only" style="display: none">
                            <input id="b_b27ba410d303e0a239c8ba8e5_3568ace95e" type="text" name="b_b27ba410d303e0a239c8ba8e5_3568ace95e" aria-hidden="true" tabindex="-1" value="">
                            <label class="sr-only" for="b_b27ba410d303e0a239c8ba8e5_3568ace95e">hidden value</label>
                        </div>
                    </form>
                </div>
            </div>
        {% endif %}

        {% if settings.footer_social_enable %}
            <div class="footer-social">
                <p class="footer-social__head">{{ settings.footer_column_social_media_header }}</p>
                <ul class="footer-social__list">
                    {% for link in linklists.social-menu.links %}
                        <li class="footer-social__item">
                          <a class="footer-social__link" href="{{ link.url }}" aria-label="{{ link.title }}" target="_blank" onClick="ga('send', 'event', 'Social Media Links', 'Click: {{ link.title }}', 'Referrer: {{ page_title }}')">
                            {%- if link.title == 'Instagram' -%}
                              {%- include 'icon' with 'icon-instagram' -%}
                            {%- else -%}
                            <i class="footer-social__ico-{{ link.title | handleize }}"></i>
                            <span class="footer-social__title">{{ link.title }}</span>
                            {%- endif -%}
                          </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <!-- TO EDIT -->
        <p class="footer-disclaimer">
            Â© {{ 'now' | date: "%Y" }} Hurom America Inc. All Rights Reserved. <a class="link-o" href="/pages/privacy-policy" onClick="ga('send', 'event', 'Footer Navigation', 'Click: /pages/privacy-policy', 'Referrer: {{ page_title }}')">Privacy Policy</a>.
        </p>
        <!-- END TO EDIT -->
    </div>
</footer>
